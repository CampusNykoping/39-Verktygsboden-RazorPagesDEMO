@page
@model Verktygsboden.Pages.Admin.BookingAdmin.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Booking</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Booking.Id" />
            <div class="form-group">
                <label asp-for="Booking.Notes" class="control-label"></label>
                <input asp-for="Booking.Notes" class="form-control" />
                <span asp-validation-for="Booking.Notes" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.FromTime" class="control-label"></label>
                <input asp-for="Booking.FromTime" class="form-control" />
                <span asp-validation-for="Booking.FromTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.ToTime" class="control-label"></label>
                <input asp-for="Booking.ToTime" class="form-control" />
                <span asp-validation-for="Booking.ToTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.AssetId" class="control-label"></label>
                <select asp-for="Booking.AssetId" class="form-control" asp-items="ViewBag.AssetId"></select>
                <span asp-validation-for="Booking.AssetId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Booking.UserId" class="control-label"></label>
                <select asp-for="Booking.UserId" class="form-control" asp-items="ViewBag.UserId"></select>
                <span asp-validation-for="Booking.UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
